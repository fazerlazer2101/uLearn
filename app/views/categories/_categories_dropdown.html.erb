<%= form_tag(categories_path, method: :get) do %>
  <div class="row">
    <div class="col-auto">
      <%= select_tag 'id', options_from_collection_for_select(@all_categories, 'id', 'category_name'), {prompt: 'Categories', class: 'dropdown-item'} %>
    </div>
    <div class="col-auto">
      <%= submit_tag 'Search', class: 'btn btn-outline-success' %>
    </div>
  </div>
<% end %>
